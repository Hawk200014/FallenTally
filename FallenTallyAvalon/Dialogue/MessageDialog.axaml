<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                Height="100"
        Width="250"
        x:Class="FallenTally.MessageDialog"
        Title="MessageDialog">
  <DockPanel>
    <Button x:Name="OkButton" Content="OK" Click="Button_Click"  Height="10" DockPanel.Dock="Bottom" HorizontalAlignment="Stretch"/>
    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
      <TextBlock x:Name="MessageTextBlock" Text="Info" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </WrapPanel>
  </DockPanel>
</Window>
